<Application x:Class="KlinikaFront.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KlinikaFront"
             xmlns:viewmodel="clr-namespace:KlinikaFront.ViewModel"
             xmlns:view="clr-namespace:KlinikaFront.View">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodel:IndexViewModel}">
            <view:Index />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:MainViewModel}">
            <view:Main />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:LoginViewModel}">
            <view:LoginScreen />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:ScheduleExaminationViewModel}">
            <view:ScheduleExamination />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:ExaminationsViewModel}">
            <view:Examinations />
        </DataTemplate>
    </Application.Resources>
</Application>
